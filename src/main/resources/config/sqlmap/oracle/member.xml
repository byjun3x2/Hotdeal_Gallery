<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.co.hotdeal.member.dao.MemberDAO">

    <insert id="insertMember" parameterType="kr.co.hotdeal.member.vo.MemberVO">
        INSERT INTO MEMBER (MEMBER_ID, USERNAME, PASSWORD, NAME, EMAIL, REG_DATE)
        VALUES (MEMBER_SEQ.NEXTVAL, #{username}, #{password}, #{name}, #{email}, SYSDATE)
    </insert>

    <select id="selectMemberByUsername" parameterType="string" resultType="kr.co.hotdeal.member.vo.MemberVO">
        SELECT * FROM MEMBER WHERE USERNAME = #{username}
    </select>

    <select id="selectMemberById" parameterType="int" resultType="kr.co.hotdeal.member.vo.MemberVO">
        SELECT * FROM MEMBER WHERE MEMBER_ID = #{memberId}
    </select>

    <select id="login" parameterType="map" resultType="kr.co.hotdeal.member.vo.MemberVO">
    	SELECT * FROM MEMBER WHERE USERNAME = #{username} AND PASSWORD = #{password}
	</select>
	
    <delete id="deleteMemberByUsername" parameterType="string">
        DELETE FROM MEMBER WHERE USERNAME = #{username}
    </delete>
</mapper>
