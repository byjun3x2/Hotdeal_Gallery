        if(res.result === "success") {
            $("#likes-count").text(res.likes);
            $("#dislikes-count").text(res.dislikes);
            message = "Ìà¨ÌëúÍ∞Ä Î∞òÏòÅÎêòÏóàÏäµÎãàÎã§!";
        } else {
            message = res.result;
        }

        msgSpan.text(message).css('visibility', 'visible');
        
        if (voteMsgTimer) {
